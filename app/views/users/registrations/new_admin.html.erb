<!DOCTYPE html>
<html>
  <head>
    <title>Setup</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <div class="container">

    <div class="jumbotron">
      <h1>Welcome!</h1>
      <p>Please create an Administrator to begin.</p>
    </div>

    <%= form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row form-group">
      <div class="col-md-2">
        <%= f.label :fname, "First Name" %><br />
      </div>
      <div class="col-md-3">
        <%= f.text_field :fname, class: "form-control"  %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-2">
        <%= f.label :lname, "Last Name" %><br />
      </div>
      <div class="col-md-3">
        <%= f.text_field :lname, class: "form-control"  %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-2">
        <%= f.label :email %><br />
      </div>
      <div class="col-md-3">
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-2">
        <%= f.label :password %>
      </div>
      <div class="col-md-3">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br /> 
        <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col-md-2">
        <%= f.label :password_confirmation %><br />
      </div>
      <div class="col-md-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2">
        <%= f.submit "Create Administrator", class: 'form-control btn btn-danger' %>
      </div>
    </div>
    <% end %>

  </div>



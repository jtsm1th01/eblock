<h1>My Watchlist</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Item</th>
      <th>Current Bid</th>
      <th>My Bid</th>
      <th>Status</th>
      <th>Outbid Notice</th>
    </tr>
  </thead>
  <tbody>
    <% @watch_list.each do |item, details| %>
    <tr>
      <td><%= link_to image_tag(item.photo.url(:thumb)), item_path(item) %></td>
      <td><%= link_to item.name, item_path(item) %></td>
      <td>$<%= item.high_bid.try(:amount) || 0 %></td>
      <td>$<%= details[:user_bid] %></td>
      <td><%= details[:status] %></td>
      <% link_txt = details[:watch_list_item].wants_email ? "Don't Email Me" : 'Email Me' %>
      <td><%= link_to "#{link_txt}",
              watch_list_item_path(details[:watch_list_item].id),
                       method: :patch %></td>
      <td><%= link_to 'Remove Item',
              watch_list_item_path(details[:watch_list_item].id),
                       method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
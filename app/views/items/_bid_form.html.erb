<%= form_for(@item) do |f| %>
  <%= f.fields_for :bids do |ff| %>
    <% if ff.object.new_record? %>
      <%= ff.label :amount, 'Amount: $' %>
      <%= ff.number_field :amount, :value => @min_bid, min: @min_bid %>
    <% end %>
  <% end %>

<%= f.submit "Place Bid" %><br>
(Minimum bid: $<%= @min_bid %>)
<% end %>
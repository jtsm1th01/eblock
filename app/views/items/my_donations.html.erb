<h1>My Donations</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Item</th>
      <th>&nbsp;</th>
      <th>Current Bid</th>
      <th>Bids</th>
    </tr>
  </thead>
  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= link_to image_tag(donation.photo.url(:thumb)), item_path(donation) %></td>
        <td><%= link_to donation, item_path(donation) %></td>
        <td><%= link_to 'Edit Donation', edit_item_path(donation) %></td>
        <td>$<%= donation.high_bid.try(:amount) || 0 %></td>
        <td><%= donation.bids.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

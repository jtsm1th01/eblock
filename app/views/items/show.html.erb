<h1>Item Details</h1>

<div class="row">
  <div class="col-md-12">
    <h1><%= @item.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= image_tag @item.photo.url(:medium) %>
  </div>
  <div class="col-md-4">
    <h4>Item Description:</h4><br>
    <p><%= @item.description %></p><br>
    <%= @no_bids ? 'Start the Bidding!' : "Current Bid: $#{@item.high_bid}" %>
    | Total Bids:
    <%= @bid_count %><br>
      <%= render 'bid_form' %>
  </div>
</div>




<!DOCTYPE html>
<html>
<head>
  <title>Auction</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<div class="container">  
  <div class="jumbotron">
    <h1>Welcome!</h1>
    <p>We need some information about your charity in order to continue.</p>
  </div>

  <%= form_for @charity, url: charity_path(@charity) do |f| %>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :name, "Charity Name" %><br />
    </div>
    <div class="col-md-3">
    <%= f.text_field :name, class: "form-control"  %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :subhead, "Sub-Heading (Optional)" %><br />
    </div>
    <div class="col-md-3">
      <%= f.text_field :subhead, class: "form-control"  %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
    <%= f.label :email %><br />
    </div>
    <div class="col-md-3">
    <%= f.email_field :email, class: "form-control" %>
    </div>
</div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :url, "Homepage" %><br />
    </div>
    <div class="col-md-3">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>

  <!-- Upload Logo -->

  <!-- Color Picker -->

  <div class="row">
    <div class="col-md-2">
      <%= f.submit "Create Charity", class: 'form-control btn btn-danger' %>
    </div>
  </div>
  <% end %>
</div>

<%= form_for(@item) do |f| %>
  <%= f.fields_for :bids do |ff| %>
    <% if ff.object.new_record? %>
      <%= ff.label :amount, 'Amount: $' %>
<%= ff.number_field :amount, :value => @item.next_bid, min: @item.next_bid %>
    <% end %>
  <% end %>

<%= f.submit "Place Bid" %><br>
(Minimum bid: $<%= @item.next_bid %>)
<% end %>
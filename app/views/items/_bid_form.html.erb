<%= form_for([@item, @bid]) do |f| %>
  <div class="row bid-fields">
    <div class="col-md-4">
      $ <%= f.number_field :amount,
                           :value => @min_bid,
                           min: @min_bid,
                           class: "amount-field form-control" %> .00
    </div>
    <div class="col-md-3">
      <%= f.submit "Place Bid", class: "form-control btn btn-danger" %>
    </div>
  </div>
  <p class="help-block">(Minimum bid: $<%= @min_bid %>)</p>
  </div>
<% end %>
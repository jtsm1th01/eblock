<%= form_for @item do |f| %>

<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>
<div>
  <%= f.label :value %>
  <%= f.number_field :value %>
</div>

<div>
  <%= f.label :user_id %>
  <%= f.number_field :user_id %>
</div>

<div>
  <%= f.label :auction_id %>
  <%= f.number_field :auction_id %>
</div>

<%= f.submit @item.new_record? ? 'Donate item' : 'Update donation'%>

<% end %>




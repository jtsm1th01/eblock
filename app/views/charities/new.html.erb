<div class="jumbotron">
  <h1>Welcome to your new auction site, <%= current_user.fname %>!</h1>
  <p>We need some information about your charity in order to continue.</p>
</div>

<%= form_for @charity, url: charity_path(@charity) do |f| %>

<div class="row form-group">
  <div class="col-md-2">
    <%= f.label :name, "Charity Name" %><br />
  </div>
  <div class="col-md-3">
  <%= f.text_field :name, class: "form-control"  %>
  </div>
</div>

<div class="row form-group">
  <div class="col-md-2">
    <%= f.label :subhead, "Sub-Heading (Optional)" %><br />
  </div>
  <div class="col-md-3">
    <%= f.text_field :subhead, class: "form-control"  %>
  </div>
</div>

<div class="row form-group">
  <div class="col-md-2">
  <%= f.label :email %><br />
  </div>
  <div class="col-md-3">
  <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>
</div>

<div class="row form-group">
  <div class="col-md-2">
    <%= f.label :homepage %><br />
  </div>
  <div class="col-md-3">
    <%= f.text_field :homepage, class: "form-control" %>
  </div>
</div>

<!-- Upload Logo -->

<!-- Color Picker -->

<div class="row">
  <div class="col-md-2">
    <%= f.submit "Create Charity", class: 'form-control btn btn-danger' %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>

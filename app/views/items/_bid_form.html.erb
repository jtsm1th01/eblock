<%= form_for(@item) do |f| %>
  <%= f.fields_for :bids do |ff| %>
    <% if ff.object.new_record? %>
      <%= ff.label :amount, 'Amount: $' %>
      <% next_bid = @item.current_bid + 5 %>
      <%= ff.number_field :amount, :value => next_bid, min: next_bid %>
    <% end %>
  <% end %>

<%= f.submit "Place Bid" %>
<% end %>
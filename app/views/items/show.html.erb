<h1>Item Details</h1>

<div class="row">
  <div class="col-md-12">
    <h1><%= @item.name.titleize %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%= image_tag @item.photo.url(:medium) %>
  </div>
  <div class="col-md-6">
    <div class="h4">Item Description:</div>
    <div class="p"><%= @item.description %></div>
    <div class="h4">
      <%= @high_bid ? "Going For: $#{@high_bid}" : 'Start the Bidding!'%>
      | Total Bids:
      <%= @bid_count %>
    </div>
    <div>
      <%= render 'items/bid_form' %>
    </div>
</div>




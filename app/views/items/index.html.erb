<h1>Items Up for Bid</h1>
<p>Please click on item name to view item details.</p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Item</th>
      <th>Current Bid</th>
      <th>Bids</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td>$<%= item.bids.last.try(:amount) %></td>
        <td><%= item.bids.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>







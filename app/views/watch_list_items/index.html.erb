<h1>My Watchlist</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Photo</th>
      <th>Item</th>
      <th>Current Bid</th>
      <th>My Bid</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @items_with_status.each do |item, status| %>
    <tr>
      <td><%= image_tag item.photo.url(:thumb) %></td>
      <td><%= link_to item, item_path(item) %></td>
      <td>$<%= item.high_bid_amount || item.starting_bid %></td>
      <td>$<%= item.bids.where(user: current_user).maximum("amount") || 0 %></td>
      <td><%= status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
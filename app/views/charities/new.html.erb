<!DOCTYPE html>
<html>
<head>
  <title>Auction</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<div class="container">  
  <div class="jumbotron">
    <h1>Welcome!</h1>
    <p>We need some information about your charity in order to continue.</p>
  </div>

  <%= form_for @charity, url: charity_path(@charity) do |f| %>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :name, "Charity Name:" %><br />
    </div>
    <div class="col-md-3">
      <%= f.text_field :name, class: "form-control", placeholder: "Charity Name"  %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :subhead, "Sub-Heading (Optional):" %><br />
    </div>
    <div class="col-md-3">
      <%= f.text_field :subhead, class: "form-control", placeholder: "Example: Eastern Chapter"  %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :email, "Charity Email:" %><br />
    </div>
    <div class="col-md-3">
      <%= f.email_field :email, class: "form-control", placeholder: "auction@charity.com" %>
    </div>
</div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :url, "Homepage:" %><br />
    </div>
    <div class="col-md-3">
      <%= f.text_field :url, class: "form-control", placeholder: "www.charity.com" %>
    </div>
  </div>

  <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :logo, 'Logo:' %>
    </div>
    <div class="col-md-3">
      <%= f.file_field :logo, class: 'form-control' %>
    </div>
  </div>

    <div class="row form-group">
    <div class="col-md-2">
      <%= f.label :bg_color, "Background Color:" %><br />
    </div>
    <div class="col-md-3">
      <%= f.color_field :bg_color, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2">
      <%= f.submit "Create Charity", class: 'form-control btn btn-primary' %>
    </div>
  </div>
  <% end %>
</div>
